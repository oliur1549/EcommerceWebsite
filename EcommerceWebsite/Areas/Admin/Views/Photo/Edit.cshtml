@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model EcommerceWebsite.Models.Photo
<section class="content-header">
    <h1>
        Add Photo to @ViewBag.Product.Name
    </h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-xs-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Photo Information</h3>
                </div><!-- /.box-header -->
                <!-- form start -->

                <form asp-area="admin" asp-controller="photo" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="Name">Photo</label>
                            <input id="Name" type="file" class="form-control" name="fileUpload" required="required" accept="image/*">
                        </div>
                    <br />
                    <img src="~/products/@Model.Name" width="120" />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" /> Status
                            </label>
                        </div>
                        
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>   <!-- /.row -->
</section>