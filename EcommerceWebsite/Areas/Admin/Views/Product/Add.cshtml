@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model EcommerceWebsite.Areas.Admin.Models.ProductViewModel.ProductViewModel
<section class="content-header">
    <h1>
        Product List
    </h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-xs-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Product Information</h3>
                </div><!-- /.box-header -->
                <!-- form start -->

                <form asp-area="admin" asp-controller="product" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" asp-for="Product.Name">
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea type="text" class="form-control" rows="3" asp-for="Product.Description" required="required"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Details">Details</label>
                            <textarea type="text" class="form-control" rows="3" asp-for="Product.Details" required="required"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input type="number" class="form-control" asp-for="Product.Price" required="required" min="0">
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="number" class="form-control" asp-for="Product.Quantity" required="required" min="0">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Status" /> Status
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Featured" /> Featured
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                        </div>

                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>   <!-- /.row -->
</section>