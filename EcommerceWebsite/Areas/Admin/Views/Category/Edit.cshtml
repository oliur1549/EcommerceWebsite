@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model EcommerceWebsite.Models.Category
<section class="content-header">
    <h1>
        Category List
    </h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-xs-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Information</h3>
                </div><!-- /.box-header -->
                <!-- form start -->

                <form asp-area="admin" asp-controller="category" asp-action="Edit" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="Name">Category Name</label>
                            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter username">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" /> Status
                            </label>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>   <!-- /.row -->
</section>